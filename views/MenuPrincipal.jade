extends layout2

block content
    .row
        nav.navbar.navbar-inverse
            .container-fluid
                .collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
                    ul.nav.navbar-nav.col-md-12(id="global-actions")
                        li.active(class="col-md-1")
                            a(href="#")
                                span(class="glyphicon glyphicon-home", aria-hidden="true")
                        li(class="col-md-2")
                            a(href='Usuarios') USUARIOS
                        li(class="col-md-2")
                            a(href='#',id='btnMensajes', data-toggle="modal" data-target="#myModal") MENSAJES
                        li(class="dropdown col-md-2")
                            a(href="#", class="dropdown-toggle", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") LOCALIZACION
                                span(class="caret")
                                    ul(class="dropdown-menu")
                                        li
                                            a(href="Principal_TiempoReal") Tiempo Real
                                        li
                                            a(href="#") Localizacion GPS
                        li(class="dropdown col-md-2 col-md-offset-3 avatarrr")
    .row   
        .bodyNoticias
            .row
                .formNoticia
                    .navii.col-md-12
                        .etNoticia.col-md-11(style="padding-left:0px; padding-right:0px;")
                            textarea(type='text',placeholder='Publicar Noticia..',id='textNoticiaNew',rows="5",style="padding-right:10px;padding-left:10px;")
                        .btnNoticia.col-md-1(style="padding-right:0px;")
                            form(enctype="multipart/form-data",method="post")
                                .form-group.col-md-12
                                    .row
                                        .imgButton.col-md-10(style="margin:0 auto;display:block;width:100%;")
                                            input(type='file',name="nombre",id="botonImg", placeholder="Subir Imagen",accept="image/*")
                                    .row
                                            a.nombreImg
                                .form-group.col-md-12
                                    .row
                                        input.btn.btn-primary(type="submit",value="Enviar",id='btnNoticiaNew')
            .row
                h1 REPORTES
                .noticias.col-md-12
                    p.dirImagen #{dirImagen}
                        .cajaNoticia
                            .cajaPosicion
                                strong
                                span
                                span.fecha
                                p
                                img.imagenNoti
    .footer
        #mimapa
    script(src="/javascripts/bootstrap.min.js")