extends layout2

block content
  nav.navbar.navbar-inverse
    .container-fluid
      .collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
        ul.nav.navbar-nav.col-md-12
          li(class="col-md-1")
            a(href="MenuPrincipal")
              span(class="glyphicon glyphicon-home", aria-hidden="true")
          li(class="col-md-2")
            a(href='RegistrarUsuario') NUEVO USUARIO
          li(class="col-md-2")
            a(href='#',id='btnMensajes', data-toggle="modal" data-target="#myModal") MENSAJES
          li(class="dropdown col-md-2")
            a(href="#", class="dropdown-toggle", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") LOCALIZACION
              span(class="caret")
                ul(class="dropdown-menu")
                  li
                    a(href="Principal_TiempoReal") Tiempo Real
                  li
                    a(href="#") Localizacion GPS
          li(class="dropdown col-md-2 col-md-offset-3 avatarrr")

   #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
      .modal-dialog
        .modal-content(style="margin-top: 140px;")
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
            h4#myModalLabel.modal-title DATOS PERSONALES
          .modal-body.User(style="height: 250px;")
            .row.col-md-12
              p.col-md-4(style="font-weight: bold;font-size: 1.5em;") Nick:
              p.col-md-8.nomC(style="font-weight: 100;font-size: 1.4em;color:#969494",class='titModalUser')
              input.n.col-md-8(type='text',size='50',name="editNom",style="display:none")
            .row.col-md-12
              p.col-md-4(style="font-weight: bold;font-size: 1.5em;") Nombres:
              p.apC.col-md-8(style="font-weight: 100;font-size: 1.4em;color:#969494",class='titModalUser')
              input.a.col-md-8(type='text',size='50',name="editApe",style="display:none")
            .row.col-md-12
              p.col-md-4(style="font-weight: bold;font-size: 1.5em;") Cargo:
              p.carC.col-md-8(style="font-weight: 100;font-size: 1.4em;color:#969494",class='titModalUser')
              input.c.col-md-8(type='text',size='50',name="editCarg",style="display:none")
            .row.col-md-12
              p.col-md-4(style="font-weight: bold;font-size: 1.5em;") Domicilio:
              p.domC.col-md-8(style="font-weight: 100;font-size: 1.4em;color:#969494",class='titModalUser')
              input.d.col-md-8(type='text',size='50',name="editDom",style="display:none")
            .row.col-md-12
              p.col-md-4(style="font-weight: bold;font-size: 1.5em;") Telefono:
              p.telC.col-md-8(style="font-weight: 100;font-size: 1.4em;color:#969494",class='titModalUser')
              input.t.col-md-8(type='text',size='50',name="editTel",style="display:none")
          .modal-footer
            button.btn.btn-primary.edit(type='button',value="Editar") EDITAR
            button.btn.btn-default.acept(type='button', data-dismiss='modal',value="Aceptar") CANCELAR  
  .sectionBuscador
      input.buscador(type='text',size='50', placeholder="Buscar Personal ...")
      #resultado
  li.app(id='variables')=nombres
  .table-responsive(style="width:85%;margin:0 auto;border-top:20px solid rgba(255,255,255,.0);")
    table.table
      thead
        tr
          td(style="font-size:1.3em;") CI
          td(style="font-size:1.3em;") NICK
          td(style="font-size:1.3em;") NOMBRE COMPLETO
          td(style="font-size:1.3em;") CARGO
          td(style="font-size:1.3em;") DOMICILIO
          td(style="font-size:1.3em;") TELEFONO
      tbody.tablaV
        -for (var i=0;i<nombres.length;i++)
          tr(id=i, data-toggle="modal", data-target="#myModal")
            td(id='ciT') #{cii[i]}
            td(id='nomT') #{nick[i]}
            td(id='apeT') #{nombres[i]}
            td(id='cargT') #{cargos[i]}
            td(id='domT') #{domicilios[i]}
            td(id='telT') #{telefonos[i]}
  script(src="/javascripts/bootstrap.min.js")